#!/bin/sh

# Get the product name (remove nulls and newlines)
model=$(tr -d '\0' </sys/devices/virtual/dmi/id/product_name | tr -d '\n')

# Check mute status
pamixer_mute_status=$(sudo -u "$(id -u -n 1000)" env XDG_RUNTIME_DIR=/run/user/1000 pamixer --get-mute)

# Function to run hwC2D0 commands
run_hwC2D0() {
	if [ "$pamixer_mute_status" = "true" ]; then
		sudo hda-verb /dev/snd/hwC2D0 0x20 0x500 0x0b
		sudo hda-verb /dev/snd/hwC2D0 0x20 0x400 0x8
	else
		sudo hda-verb /dev/snd/hwC2D0 0x20 0x500 0x0b
		sudo hda-verb /dev/snd/hwC2D0 0x20 0x400 0x0
	fi
}

# Function to run hwC0D0 commands
run_hwC0D0() {
	if [ "$pamixer_mute_status" = "true" ]; then
		sudo hda-verb /dev/snd/hwC0D0 0x20 0x500 0x0B
		sudo hda-verb /dev/snd/hwC0D0 0x20 0x400 0x7778
	else
		sudo hda-verb /dev/snd/hwC0D0 0x20 0x500 0x0B
		sudo hda-verb /dev/snd/hwC0D0 0x20 0x400 0x7774
	fi
}

# Function to run hwC1D0 alternate commands
run_hwC1D0_alt() {
	if [ "$pamixer_mute_status" = "true" ]; then
		sudo hda-verb /dev/snd/hwC1D0 0x20 0x500 0x7
		sudo hda-verb /dev/snd/hwC1D0 0x20 0x400 0x1
	else
		sudo hda-verb /dev/snd/hwC1D0 0x20 0x500 0x7
		sudo hda-verb /dev/snd/hwC1D0 0x20 0x400 0x0
	fi
}

# Function to run hwC1D0 commands (fallback)
run_hwC1D0() {
	if [ "$pamixer_mute_status" = "true" ]; then
		sudo hda-verb /dev/snd/hwC1D0 0x20 0x500 0x0B
		sudo hda-verb /dev/snd/hwC1D0 0x20 0x400 0x7778
	else
		sudo hda-verb /dev/snd/hwC1D0 0x20 0x500 0x0B
		sudo hda-verb /dev/snd/hwC1D0 0x20 0x400 0x7774
	fi
}

# Determine which group the model belongs to
model_group="unknown"

# Group 1: hwC2D0 models
for id in \
	"16-xd0"; do
	echo "$model" | grep -iq "$id" && model_group="hwC2D0" && break
done

# Group 2: hwC0D0 models
if [ "$model_group" = "unknown" ]; then
	for id in \
		"14-ek1"; do
		echo "$model" | grep -iq "$id" && model_group="hwC0D0" && break
	done
fi

# Group 3: hwC1D0_alt models
if [ "$model_group" = "unknown" ]; then
	for id in \
		"15s-eq1"; do
		echo "$model" | grep -iq "$id" && model_group="hwC1D0_alt" && break
	done
fi

# Dispatch based on detected group
case "$model_group" in
hwC2D0) run_hwC2D0 ;;
hwC0D0) run_hwC0D0 ;;
hwC1D0_alt) run_hwC1D0_alt ;;
*) run_hwC1D0 ;;
esac
